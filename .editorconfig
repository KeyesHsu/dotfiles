root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true


[*.py]
max_line_length = 120

[{.gitconfig, .gitmodules}]
indent_style = tab

[*.{md,markdown}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

